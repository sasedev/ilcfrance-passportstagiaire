{% extends 'IlcfranceResBundle::admin.tpl.html.twig' %}
{% block breadcrumb %}
<ol class="breadcrumb">
	<li><a href="{{ path('ilcfrance_stagiaire_passport_homepage') }}">{{ faIco('dashboard') }} {{'breadcrumb.admin.dasboard'|trans|raw}}</a></li>
	<li class="active"><a href="{{ path('ilcfrance_stagiaire_passport_user_list') }}">{{faIco('users')}} {{'User.breadcrumb.admin.list'|trans|raw}}</a></li>
</ol>
{% endblock breadcrumb %}
{% block main %}
<div class="row">
	<div class="col-lg-12">
		<div class="well well-sm text-right">
			<a href="{{ path('ilcfrance_stagiaire_passport_user_addGet') }}" class="btn btn-primary">{{ faIco('plus') }} {{ 'action.add'|trans }}</a>
		</div>
		<div class="box">
			<div class="box-header">
				<h3 class="box-title">{{ 'User.tlabel.admin.list'|trans|raw}}</h3>
			</div>
			<div class="box-body table-responsive">
				<table id="userList" class="table table-bordered table-hover">
					<thead>
						<tr>
							<th>{{ 'User.id.label'|trans|raw }}</th>
							<th>{{ 'User.fullName.label'|trans|raw }}</th>
							<th>{{ 'User.email.label'|trans|raw }}</th>
							<th>{{ 'User.lockout.label'|trans|raw }}</th>
							<th>{{ 'User.userRoles.label'|trans|raw }}</th>
							<th>{{ 'table.actions'|trans|raw }}</th>
						</tr>
					</thead>
					<tbody>
					{% if users|length != 0 %}
						{% for user in users %}
						<tr>
							<td>{{ user.id }} </td>
							<td>{{ ('User.sexe.' ~ user.sexe)|trans }} {{ user.fullName }}</td>
							<td>{{ user.email }} </td>
							<td>{{ ('User.lockout.' ~ user.lockout)|trans }}</td>
							<td>
								{%if user.userRoles|length==0%}
								{{bsLabel('_NONE'|trans)}}
								{%else%}
								<ul class="list-unstyled">
								{% for role in user.userRoles %}
									<li>{{role.id}}</li>
								{% endfor %}
								</ul>
								{%endif%}
							</td>
							<td>
								<a class="btn btn-sm btn-info" href="{{path('ilcfrance_stagiaire_passport_user_editGet',{'id':user.id})}}">{{ faIco('edit') }} {{ 'action.edit'|trans }}</a>
								<a class="btn btn-sm btn-danger deleteConfirmUser" href="{{path('ilcfrance_stagiaire_passport_user_delete',{'id':user.id})}}">{{ faIco('trash') }} {{ 'action.delete'|trans }}</a>
							</td>
						</tr>
						{% endfor %}
					{% else %}
						<tr>
							<td colspan="6">{{ 'User.empty'|trans|raw }}</td>
						</tr>
					{% endif %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<div id="deleteConfirmUser" class="modal modal-info fade in" tabindex="-1" user="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
				<h3 class="modal-title">{{'User.delete.confirm.title'|trans|raw}}</h3>
			</div>
			<div class="modal-body">
				{{'User.delete.confirm.txt'|trans|raw}}
			</div>
			<div class="modal-footer">
				<a href="" class="btn btn-primary danger btn-outline pull-left">{{'_yes'|trans|raw}}</a>
				<button type="button" class="btn btn-danger btn-outline pull-right" data-dismiss="modal">{{'_no'|trans|raw}}</button>
			</div>
		</div>
	</div>
</div>
{% endblock main %}
{% block htmlBodyScripts %}
{{ parent() }}
<script type="text/javascript">
$(function() {
	{% if users|length != 0 %}
	$('#userList').DataTable({
		"language": {
			"url": "{{ asset('/res/js/dataTablesI18N/')~(app.request.locale~'_datatables')|trans }}"
		},
		"columns": [
			null,
			null,
			null,
			null,
			null,
			{ "searchable": false, "sortable": false }
		],
		"pageLength": 10,
		fnDrawCallback : function() {
			$('.deleteConfirmUser').on("click", function(e) {
				e.preventDefault();
				var lnk = $(this).attr('href');
				modalDeleteBtn = $('#deleteConfirmUser').find('.danger');
				modalDeleteBtn.attr('href', lnk);
				$('#deleteConfirmUser').modal('show');
			});
		}
	});
	{% endif %}
});
</script>
{% endblock htmlBodyScripts %}
