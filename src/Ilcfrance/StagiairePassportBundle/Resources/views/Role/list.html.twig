{% extends 'IlcfranceResBundle::admin.tpl.html.twig' %}
{% block breadcrumb %}
<ol class="breadcrumb">
	<li><a href="{{ path('ilcfrance_stagiaire_passport_homepage') }}">{{ faIco('dashboard') }} {{'breadcrumb.admin.dasboard'|trans|raw}}</a></li>
	<li class="active"><a href="{{ path('ilcfrance_stagiaire_passport_role_list') }}">{{faIco('flash')}} {{'Role.breadcrumb.admin.list'|trans|raw}}</a></li>
</ol>
{% endblock breadcrumb %}
{% block main %}
<div class="row">
	<div class="col-lg-12">
		<div class="well well-sm text-right">
			<a href="{{ path('ilcfrance_stagiaire_passport_role_addGet') }}" class="btn btn-primary">{{ faIco('plus') }} {{ 'action.add'|trans }}</a>
		</div>
		<div class="box">
			<div class="box-header">
				<h3 class="box-title">{{ 'Role.tlabel.admin.list'|trans|raw}}</h3>
			</div>
			<div class="box-body table-responsive">
				<table id="roleList" class="table table-bordered table-hover">
					<thead>
						<tr>
							<th>{{ 'Role.id.label'|trans|raw }}</th>
							<th>{{ 'Role.description.label'|trans|raw }}</th>
							<th>{{ 'Role.parents.label'|trans|raw }}</th>
							<th>{{ 'Role.childs.label'|trans|raw }}</th>
							<th>{{ 'Role.users.label'|trans|raw }}</th>
							<th>{{ 'table.actions'|trans|raw }}</th>
						</tr>
					</thead>
					<tbody>
					{% if roles|length != 0 %}
						{% for role in roles %}
						<tr>
							<td>{{ role.id }} </td>
							<td>{{ role.description|raw }}</td>
							<td>
								{%if role.parents|length==0%}
								{{bsLabel('_NONE'|trans)}}
								{%else%}
								<ul class="list-unstyled">
								{% for role in role.parents %}
									<li>{{role.id}}</li>
								{% endfor %}
								</ul>
								{%endif%}
							</td>
							<td>
								{%if role.childs|length==0%}
								{{bsLabel('_NONE'|trans)}}
								{%else%}
								<ul class="list-unstyled">
								{% for role in role.childs %}
									<li>{{role.id}}</li>
								{% endfor %}
								</ul>
								{%endif%}
							</td>
							<td>
								{{bsLabel(role.users|length)}}
							</td>
							<td>
								<a class="btn btn-sm btn-info" href="{{path('ilcfrance_stagiaire_passport_role_editGet',{'id':role.id})}}">{{ faIco('edit') }} {{ 'action.edit'|trans }}</a>
								<a class="btn btn-sm btn-danger deleteConfirmRole" href="{{path('ilcfrance_stagiaire_passport_role_delete',{'id':role.id})}}">{{ faIco('trash') }} {{ 'action.delete'|trans }}</a>
							</td>
						</tr>
						{% endfor %}
					{% else %}
						<tr>
							<td colspan="6">{{ 'Role.empty'|trans|raw }}</td>
						</tr>
					{% endif %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<div id="deleteConfirmRole" class="modal modal-info fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
				<h3 class="modal-title">{{'Role.delete.confirm.title'|trans|raw}}</h3>
			</div>
			<div class="modal-body">
				{{'Role.delete.confirm.txt'|trans|raw}}
			</div>
			<div class="modal-footer">
				<a href="" class="btn btn-primary danger btn-outline pull-left">{{'_yes'|trans|raw}}</a>
				<button type="button" class="btn btn-danger btn-outline pull-right" data-dismiss="modal">{{'_no'|trans|raw}}</button>
			</div>
		</div>
	</div>
</div>
{% endblock main %}
{% block htmlBodyScripts %}
{{ parent() }}
<script type="text/javascript">
$(function() {
	{% if roles|length != 0 %}
	$('#roleList').DataTable({
		"language": {
			"url": "{{ asset('/res/js/dataTablesI18N/')~(app.request.locale~'_datatables')|trans }}"
		},
		"columns": [
			null,
			null,
			null,
			null,
			null,
			{ "searchable": false, "sortable": false }
		],
		"pageLength": 10,
		fnDrawCallback : function() {
			$('.deleteConfirmRole').on("click", function(e) {
				e.preventDefault();
				var lnk = $(this).attr('href');
				modalDeleteBtn = $('#deleteConfirmRole').find('.danger');
				modalDeleteBtn.attr('href', lnk);
				$('#deleteConfirmRole').modal('show');
			});
		}
	});
	{% endif %}
});
</script>
{% endblock htmlBodyScripts %}
