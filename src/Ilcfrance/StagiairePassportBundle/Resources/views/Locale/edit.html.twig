{% extends 'IlcfranceResBundle::admin.tpl.html.twig' %}
{% block breadcrumb %}
<ol class="breadcrumb">
	<li><a href="{{ path('ilcfrance_stagiaire_passport_homepage') }}">{{ faIco('dashboard') }} {{'breadcrumb.admin.dasboard'|trans|raw}}</a></li>
	<li><a href="{{ path('ilcfrance_stagiaire_passport_locale_list') }}">{{faIco('language')}} {{'Locale.breadcrumb.admin.list'|trans|raw}}</a></li>
	<li class="active"><a href="{{ path('ilcfrance_stagiaire_passport_locale_editGet', {'id': locale.id}) }}">{{faIco('edit')}} {{'Locale.breadcrumb.admin.edit'|trans({'%locale%': locale.languageName})|raw}}</a></li>
</ol>
{% endblock breadcrumb %}
{% block main %}
<div class="row">
	<div class="col-lg-12">
		<div class="well well-sm text-right">
			<a href="{{ path('ilcfrance_stagiaire_passport_locale_list') }}" class="btn btn-primary">{{ faIco('th') }} {{ 'action.list'|trans }}</a>
			<a href="{{ path('ilcfrance_stagiaire_passport_locale_addGet') }}" class="btn btn-primary">{{ faIco('plus') }} {{ 'action.add'|trans }}</a>
		</div>
		<div class="nav-tabs-custom">
			<ul class="nav nav-tabs">
				<li {%if tabActive==1%} class="active"{%endif%}><a href="#overview" data-toggle="tab">{{'Locale.tab.admin.overview'|trans|raw}}</a></li>
				<li {%if tabActive==2%} class="active"{%endif%}><a href="#edit" data-toggle="tab">{{'Locale.tab.admin.edit'|trans|raw}}</a></li>
			</ul>
			<div class="tab-content">
				<div class="tab-pane fade{%if tabActive==1%} in active{%endif%}" id="overview">
					<div class="panel box box-primary">
						<div class="box-header"><h3 class="box-title">{{'Locale.tlabel.admin.overview'|trans}}</h3></div>
						<div class="box-body">
							<div class="row">
								<div class="col-lg-3 text-right">{{'Locale.id'|trans|raw}} :</div>
								<div class="col-lg-9">{{locale.id}}&nbsp;</div>
								<div class="col-lg-3 text-right">{{'Locale.languageName'|trans|raw}} :</div>
								<div class="col-lg-9">{{locale.languageName}}&nbsp;</div>
								<div class="col-lg-3 text-right">{{'Locale.direction'|trans|raw}} :</div>
								<div class="col-lg-9">{{('Locale.direction.' ~ locale.direction)|trans}}&nbsp;</div>
								<div class="col-lg-3 text-right">{{'Locale.status'|trans|raw}} :</div>
								<div class="col-lg-9">{{ ('Locale.status.' ~ locale.status)|trans }}&nbsp;</div>
								<div class="col-lg-12">&nbsp;</div>
								<div class="col-lg-3 text-right">{{'Locale.users'|trans|raw}} :</div>
								<div class="col-lg-9">
									{{bsLabel(locale.users|length)}}&nbsp;
								</div>
								<div class="col-lg-12">&nbsp;</div>
								<div class="col-lg-3 text-right">{{'Locale.dtCrea'|trans|raw}} :</div>
								<div class="col-lg-9">{{locale.dtCrea|localeDate('medium')}} {{'_at'|trans}} {{locale.dtCrea|localeDate('none', 'short')}}&nbsp;</div>
								<div class="col-lg-3 text-right">{{'Locale.dtUpdate'|trans|raw}} :</div>
								<div class="col-lg-9">{{locale.dtUpdate|localeDate('medium')}} {{'_at'|trans}} {{locale.dtUpdate|localeDate('none', 'short')}}&nbsp;</div>
								<br>
							</div>
						</div>
					</div>
				</div>
				<div class="tab-pane fade{%if tabActive==2%} in active{%endif%}" id="edit">
					<div class="panel box box-danger">
						<div class="box-header"><h3 class="box-title">{{'Locale.tlabel.admin.editId'|trans}}</h3></div>
						<div class="box-body">
							{{form_start(LocaleUpdateIdForm, {'method':'POST', 'action': path('ilcfrance_stagiaire_passport_locale_editPost', {'id': locale.id}), 'style': 'horizontal'})}}
							{{form_row(LocaleUpdateIdForm.id, {'label_col': 3, 'widget_col': 8 })}}
							<div class="form-group"><div class="col-lg-offset-3 col-lg-2"><button class="btn-primary btn" type="submit">{{glyphIco('save')}} {{'action.btnEdit'|trans|raw}}</button></div></div>
							{{form_end(LocaleUpdateIdForm)}}
						</div>
					</div>
					<div class="panel box box-danger">
						<div class="box-header"><h3 class="box-title">{{'Locale.tlabel.admin.editDirection'|trans}}</h3></div>
						<div class="box-body">
							{{form_start(LocaleUpdateDirectionForm, {'method':'POST', 'action': path('ilcfrance_stagiaire_passport_locale_editPost', {'id': locale.id}), 'style': 'horizontal'})}}
							{{form_row(LocaleUpdateDirectionForm.direction, {'label_col': 3, 'widget_col': 8 , 'attr': {'class': 'select2', 'style': 'width:100%', 'placeholder': 'Locale.direction.placeholder'} })}}
							<div class="form-group"><div class="col-lg-offset-3 col-lg-2"><button class="btn-primary btn" type="submit">{{glyphIco('save')}} {{'action.btnEdit'|trans|raw}}</button></div></div>
							{{form_end(LocaleUpdateDirectionForm)}}
						</div>
					</div>
					<div class="panel box box-danger">
						<div class="box-header"><h3 class="box-title">{{'Locale.tlabel.admin.editStatus'|trans}}</h3></div>
						<div class="box-body">
							{{form_start(LocaleUpdateStatusForm, {'method':'POST', 'action': path('ilcfrance_stagiaire_passport_locale_editPost', {'id': locale.id}), 'style': 'horizontal'})}}
							{{form_row(LocaleUpdateStatusForm.status, {'label_col': 3, 'widget_col': 8, 'attr': {'class': 'select2', 'style': 'width:100%', 'placeholder': 'Locale.status.placeholder'} })}}
							<div class="form-group"><div class="col-lg-offset-3 col-lg-2"><button class="btn-primary btn" type="submit">{{glyphIco('save')}} {{'action.btnEdit'|trans|raw}}</button></div></div>
							{{form_end(LocaleUpdateStatusForm)}}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock main %}
{% block htmlBodyScripts %}
{{ parent() }}
<script type="text/javascript">
$(function() {
});
</script>
{% endblock htmlBodyScripts %}
