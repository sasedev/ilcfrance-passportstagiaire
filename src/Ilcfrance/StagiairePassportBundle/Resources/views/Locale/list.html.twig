{% extends 'IlcfranceResBundle::admin.tpl.html.twig' %}
{% block breadcrumb %}
<ol class="breadcrumb">
	<li><a href="{{ path('ilcfrance_stagiaire_passport_homepage') }}">{{ faIco('dashboard') }} {{'breadcrumb.admin.dasboard'|trans|raw}}</a></li>
	<li class="active"><a href="{{ path('ilcfrance_stagiaire_passport_locale_list') }}">{{faIco('language')}} {{'Locale.breadcrumb.admin.list'|trans|raw}}</a></li>
</ol>
{% endblock breadcrumb %}
{% block main %}
<div class="row">
	<div class="col-lg-12">
		<div class="well well-sm text-right">
			<a href="{{ path('ilcfrance_stagiaire_passport_locale_addGet') }}" class="btn btn-primary">{{ faIco('plus') }} {{ 'action.add'|trans }}</a>
		</div>
		<div class="box">
			<div class="box-header">
				<h3 class="box-title">{{ 'Locale.tlabel.admin.list'|trans|raw}}</h3>
			</div>
			<div class="box-body table-responsive">
				<table id="localeList" class="table table-bordered table-hover">
					<thead>
						<tr>
							<th>{{ 'Locale.id.label'|trans|raw }}</th>
							<th>{{ 'Locale.direction.label'|trans|raw }}</th>
							<th>{{ 'Locale.status.label'|trans|raw }}</th>
							<th>{{ 'Locale.users.label'|trans|raw }}</th>
							<th>{{ 'table.actions'|trans|raw }}</th>
						</tr>
					</thead>
					<tbody>
					{% if locales|length != 0 %}
						{% for locale in locales %}
						<tr>
							<td>{{ locale.id }} </td>
							<td>{{ ('Locale.direction.' ~ locale.direction)|trans }}</td>
							<td>{{ ('Locale.status.' ~ locale.status)|trans }}</td>
							<td>
								{{bsLabel(locale.users|length)}}
							</td>
							<td>
								<a class="btn btn-sm btn-info" href="{{path('ilcfrance_stagiaire_passport_locale_editGet',{'id':locale.id})}}">{{ faIco('edit') }} {{ 'action.edit'|trans }}</a>
								<a class="btn btn-sm btn-danger deleteConfirmLocale" href="{{path('ilcfrance_stagiaire_passport_locale_delete',{'id':locale.id})}}">{{ faIco('trash') }} {{ 'action.delete'|trans }}</a>
							</td>
						</tr>
						{% endfor %}
					{% else %}
						<tr>
							<td colspan="5">{{ 'Locale.empty'|trans|raw }}</td>
						</tr>
					{% endif %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<div id="deleteConfirmLocale" class="modal modal-info fade in" tabindex="-1" locale="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
				<h3 class="modal-title">{{'Locale.delete.confirm.title'|trans|raw}}</h3>
			</div>
			<div class="modal-body">
				{{'Locale.delete.confirm.txt'|trans|raw}}
			</div>
			<div class="modal-footer">
				<a href="" class="btn btn-primary danger btn-outline pull-left">{{'_yes'|trans|raw}}</a>
				<button type="button" class="btn btn-danger btn-outline pull-right" data-dismiss="modal">{{'_no'|trans|raw}}</button>
			</div>
		</div>
	</div>
</div>
{% endblock main %}
{% block htmlBodyScripts %}
{{ parent() }}
<script type="text/javascript">
$(function() {
	{% if locales|length != 0 %}
	$('#localeList').DataTable({
		"language": {
			"url": "{{ asset('/res/js/dataTablesI18N/')~(app.request.locale~'_datatables')|trans }}"
		},
		"columns": [
			null,
			null,
			null,
			null,
			{ "searchable": false, "sortable": false }
		],
		"pageLength": 10,
		fnDrawCallback : function() {
			$('.deleteConfirmLocale').on("click", function(e) {
				e.preventDefault();
				var lnk = $(this).attr('href');
				modalDeleteBtn = $('#deleteConfirmLocale').find('.danger');
				modalDeleteBtn.attr('href', lnk);
				$('#deleteConfirmLocale').modal('show');
			});
		}
	});
	{% endif %}
});
</script>
{% endblock htmlBodyScripts %}
