{% block choice_widget %}
{% spaceless %}
	{% if expanded %}
		{{ block('choice_widget_expanded') }}
	{% else %}
		{{ block('choice_widget_collapsed') }}
	{% endif %}
{% endspaceless %}
{% endblock choice_widget %}

{% block choice_widget_expanded %}
{% spaceless %}
	<div {{ block('widget_container_attributes') }}>
	{% for child in form %}
		{% if form.multiple is defined %}
			{{ checkbox_row(child) }}
		{% else %}
			{{ radio_row(child) }}
		{% endif %}
	{% endfor %}
	</div>
{% endspaceless %}
{% endblock choice_widget_expanded %}

{% block choice_widget_collapsed %}
{% spaceless %}
	{% set attr = attr|merge({ 'class': (attr.class|default('') ~ ' form-control')|trim }) %}

	<select {{ block('widget_attributes') }}{% if multiple %} multiple="multiple"{% endif %}>
		{% if placeholder is not none %}
			<option{% if required %} disabled="disabled"{% if value is empty %} selected="selected"{% endif %}{% else %} value=""{% endif %}>{% if attr.empty_label_trans is not defined or (attr.empty_label_trans is defined and attr.empty_label_trans != false) %}{{ placeholder|trans({}, translation_domain) }}{% else %}{{ empty_value }}{% endif %}</option>
		{% endif %}
		{% if preferred_choices|length > 0 %}
			{% set options = preferred_choices %}
			{{ block('choice_widget_options') }}
			{% if choices|length > 0 and separator is not none %}
				<option disabled="disabled">{{ separator }}</option>
			{% endif %}
		{% endif %}
		{% set options = choices %}
		{{ block('choice_widget_options') }}
	</select>
{% endspaceless %}
{% endblock choice_widget_collapsed %}

{% block choice_widget_options %}
{% spaceless %}
	{% for group_label, choice in options %}
		{% if choice is iterable %}
			<optgroup label="{% if attr.group_label_trans is not defined or (attr.group_label_trans is defined and attr.group_label_trans != false) %}{{ group_label|trans({}, translation_domain) }}{% else %}{{ group_label }}{% endif %}">
				{% set options = choice %}
				{{ block('choice_widget_options') }}
			</optgroup>
		{% else %}
			<option value="{{ choice.value }}"{% if choice is selectedchoice(value) %} selected="selected"{% endif %}>{% if attr.choice_label_trans is not defined or (attr.choice_label_trans is defined and attr.choice_label_trans != true) %}{{ choice.label }}{% else %}{{ choice.label|trans({}, translation_domain) }}{% endif %}</option>
		{% endif %}
	{% endfor %}
{% endspaceless %}
{% endblock choice_widget_options %}

{% block checkbox_row %}
{% spaceless %}
	{% set style = style|default(bootstrap_get_style()) %}

	{% if attr.label_col is defined and attr.label_col is not empty %}
		{% set label_col = attr.label_col %}
	{% endif %}
	{% if attr.widget_col is defined and attr.widget_col is not empty %}
		{% set widget_col = attr.widget_col %}
	{% endif %}
	
	{% set inversed = false %}

	{% if attr.inversed is defined and attr.inversed == true %}
		{% set inversed = true %}
	{% endif %}

	{% set class = '' %}
	{% if align_with_widget is defined or attr.align_with_widget is defined %}
	<div class="form-group row">
	{% else %}
	<div class="checkbox">
	{% endif %}
	
	{% if inversed == true %}
		
		{% if align_with_widget is defined or attr.align_with_widget is defined %}
		{% set label_col = label_col|default(9) %}
		{% set class = ' col-lg-' ~ label_col %}
			<div class="{{ class }}">
		{% endif %}
		{{ block('checkbox_widget') }}
		{% if align_with_widget is defined or attr.align_with_widget is defined %}
			</div>
		{% endif %}

		{% if label is not same as(false) %}
			{% set style = style|default(bootstrap_get_style()) %}
			{% set widget_col = widget_col|default(3) %}

			{% set label_attr = label_attr|merge({ 'class': (label_attr.class|default('') ~ ' control-label')|trim }) %}
			{% if style == 'horizontal' %}
				{% set label_attr = label_attr|merge({ 'class': (label_attr.class|default('') ~ ' col-lg-' ~ widget_col)|trim }) %}
			{% elseif style == 'inline' %}
				{% set label_attr = label_attr|merge({ 'class': (label_attr.class|default('') ~ ' sr-only')|trim }) %}
			{% endif %}

			{% if not compound %}
				{% set label_attr = label_attr|merge({'for': id}) %}
			{% endif %}
			{% if required %}
				{% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
			{% endif %}
			{% if label is empty %}
				{% set label = name|humanize %}
			{% endif %}
			{% if widget_col != 0 %}
			<label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>{{ label|trans({}, translation_domain)|raw }}</label>
			{% endif %}
		{% endif %}
	{% else %}

		{% if label is not same as(false) %}
			{% set style = style|default(bootstrap_get_style()) %}
			{% set label_col = label_col|default(3) %}

			{% set label_attr = label_attr|merge({ 'class': (label_attr.class|default('') ~ ' control-label')|trim }) %}
			{% if style == 'horizontal' %}
				{% set label_attr = label_attr|merge({ 'class': (label_attr.class|default('') ~ ' col-lg-' ~ label_col)|trim }) %}
			{% elseif style == 'inline' %}
				{% set label_attr = label_attr|merge({ 'class': (label_attr.class|default('') ~ ' sr-only')|trim }) %}
			{% endif %}

			{% if not compound %}
				{% set label_attr = label_attr|merge({'for': id}) %}
			{% endif %}
			{% if required %}
				{% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
			{% endif %}
			{% if label is empty %}
				{% set label = name|humanize %}
			{% endif %}
			{% if label_col != 0 %}
			<label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>{{ label|trans({}, translation_domain)|raw }}</label>
			{% endif %}
		{% endif %}
		
		{% if align_with_widget is defined or attr.align_with_widget is defined %}
		{% set widget_col = widget_col|default(9) %}
		{% set class = ' col-lg-' ~ widget_col %}
			<div class="{{ class }}">
		{% endif %}
		{{ block('checkbox_widget') }}
		{% if align_with_widget is defined or attr.align_with_widget is defined %}
			</div>
		{% endif %}
	
	{% endif %}
	
	{% if align_with_widget is defined or attr.align_with_widget is defined %}
		</div>
	{% else %}
	</div>
	{% endif %}

	{% if style == 'inline' %}&nbsp;{% endif %}
{% endspaceless %}
{% endblock checkbox_row %}

{% block radio_row %}
{% spaceless %}
	{% set class = '' %}
	
	{% set inversed = false %}

	{% if attr.inversed is defined and attr.inversed == true %}
		{% set inversed = true %}
	{% endif %}

	{% if attr.label_col is defined and attr.label_col is not empty %}
		{% set label_col = attr.label_col %}
	{% endif %}
	{% if attr.widget_col is defined and attr.widget_col is not empty %}
		{% set widget_col = attr.widget_col %}
	{% endif %}

	{% if align_with_widget is defined or attr.align_with_widget is defined %}
		{% set widget_col = widget_col|default(9) %}
		{% set label_col = label_col|default(3) %}
		{% set class = ' col-lg-' ~ widget_col ~ ' col-offset-' ~ label_col %}
		<div class="form-group">
			<div class="{{ class }}">
	{% endif %}
	<div class="radio">
		{% if label is not same as(false) %}
			{% if inversed == true %}
			<label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>
				{{ block('radio_widget') }}
				{{ label|trans({}, translation_domain) }}
			</label>
			{% if not compound %}
				{% set label_attr = label_attr|merge({'for': id}) %}
			{% endif %}
			{% if required %}
				{% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
			{% endif %}
			{% if label is empty %}
				{% set label = name|humanize %}
			{% endif %}
			{% else %}
			{% if not compound %}
				{% set label_attr = label_attr|merge({'for': id}) %}
			{% endif %}
			{% if required %}
				{% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
			{% endif %}
			{% if label is empty %}
				{% set label = name|humanize %}
			{% endif %}
			<label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>
				{{ block('radio_widget') }}
				{{ label|trans({}, translation_domain) }}
			</label>
			{% endif %}
		{% else %}
			{{ block('radio_widget') }}
		{% endif %}
	{% if align_with_widget is defined or attr.align_with_widget is defined %}
			</div>
		</div>
	{% endif %}
	</div>
{% endspaceless %}
{% endblock radio_row %}

